@model SetPasswordViewModel
<header class="page-header bg-img size-lg">
    <div class="container">
        <h1 class="text-center">Şifre Belirle</h1>
        <p class="text-center">Bu site için geçerli kullanıcı adı ve şifreye sahip değilsiniz.Lütfen oturum açmak için yeni bir hesap oluşturun.</p>
    </div>
</header>
<main>
    <section class="no-padding-top bg-alt">
        <div class="container">
            <form asp-controller="Manage" asp-action="SetPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <h4>Şifrenizi belirleyin...</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="col-md-2 control-label">Yeni Şifre</label>
                    <div class="col-md-10">
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="col-md-2 control-label">Yeni Şifre Tekrar:</label>
                    <div class="col-md-10">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Şifre Belirle</button>
                    </div>
                </div>
            </form>

            @section Scripts {
                @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
            }
</div>
</section>
</main>