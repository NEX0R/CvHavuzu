@using Microsoft.AspNetCore.Identity
@using CvHavuzu.Web.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <a class="dropdown-toggle" href="#" data-toggle="dropdown">
            <img src="/assets/img/logo-envato.png" alt="avatar">
        </a>
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" title="Yönetim Paneli">Yönetim Paneli</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Merhaba @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Çıkış</button>
            </li>
        </ul>
    </form>
}
else
{
    <a class="dropdown-toggle" href="#" data-toggle="dropdown">
        <img src="/assets/img/logo-envato.png" alt="avatar">
    </a>

                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a href="/account/login">Giriş</a></li>
                        <li><a href="/account/register">Kaydol</a></li>
                        <li><a href="/account/forgotpassword">Şifremi Unuttum</a></li>
                    </ul>
}
